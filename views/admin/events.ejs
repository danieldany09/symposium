<%-layout('layouts/boilerplate')%>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#ECECEC;">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/aevents">All Events</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    
    <% if(typeof b=='object' && b.length>0){
        %>


    <div class="container my-5 py-3" style="background-color:#ECECEC ;">
        <div class="row">
            <div class="row mx-3">
                <div class="col-10 ">
                    <h6><b>Upcoming Events</b></h6>
                </div>
                <div class="col-2">
                    <a href="/admin/addEvents"><button class="btn btn-info" ;>ADD EVENT</button></a>
                </div>
            </div>

            <div class="row mx-2">
                <%for(let c of b){ if(c.s_date>new Date()){
                    %>
                    <div class="card m-2" style="width:300px">
                        <img src="https://media.istockphoto.com/vectors/upcoming-events-written-on-speech-bubble-advertising-sign-vector-vector-id1208206133?k=20&m=1208206133&s=612x612&w=0&h=482tKnMJARyu4KL0Imx38Mbu_NEy2oY8IQnbkNvS3DE="
                            class="card-img-top img-fluid py-2 " alt="...">
                        <div class="card-body text-center">
                            <h5 class="card-title fs-5">
                                <%=c.name%>
                            </h5>
                            <i class="card-text fs-6">
                                <%=c.desc%>
                            </i> 
                            <a  href="/admin/edit/<%=c._id%>" class="btn btn-warning mt-4">Edit</a>
                        </div>




                    </div>
                    <%}}%>

            </div>





            <div class="row mt-5">
                <div class="row mx-3 mt-5 mb-3">

                    <h6><b>Past Events</b></h6>

                </div>

                <div class="row mx-2">
                    <%for(let c of b){ if(c.s_date<new Date()){ %>
                        <div class="card m-2" style="width:300px">
                            <img src="https://thumbs.dreamstime.com/b/gesture-time-out-basketball-single-icon-black-style-vector-symbol-stock-illustration-web-91626910.jpg"
                                class="card-img-top img-fluid py-2 " alt="...">
                            <div class="card-body text-center">
                                <h5 class="card-title fs-5">
                                    <%=c.name%>
                                </h5>
                                <i class="card-text fs-6">
                                    <%=c.desc%>
                                </i>
                            </div>
                        </div>
                        <%}} } else {%>
                            <div class="container-fluid w-100 p-5" style="background-color:#ECECEC">
                                
                                <div class="container" style="background-color :#ffffff;">
                                    
                                    <h6 class="p-5 pb-0"><b>All Events</b></h6>
                                    <div class=" m-auto" style="width: 40%;">
                                        <img class="img-fluid" src="https://i.im.ge/2022/07/20/F1PDH1.png" alt="F1PDH1.png"
                                            alt="">
                                    </div>
                                    <div class="m-auto pb-4" style="width: fit-content;">
                                        <a href="/admin/addEvents"><button class="btn btn-info" ;>ADD EVENT</button></a>
                                    </div>
                                    
                                </div>
                            </div>
    
                            <%}%>
                </div>

            </div>


        </div>