<%-layout('layouts/boilerplate')%>
<%-partial('partials/u_navbar')%>


    <div class="container  px-5 ">
        <div class="row " style="margin:auto">
            <div class="col-sm-6  mb-3">
                <div class="row  text-center" style="margin: auto;width: 60%;">
                    <img src="https://i.im.ge/2022/07/20/F1PUmm.png" height="100%" alt="..">
                </div>

                <div class="row " style="margin: auto;width: 90%">
                    <form action="/user/login" method="post">
                        <h4>Login</h4>
                        <input class="form-control mb-3" type="text" name="username" id="" placeholder="Username">


                        <input class="form-control mb-3" type="password" name="password" id="" placeholder="Password">

                        
                        <button class="btn btn-success">LOGIN</button>
                    </form>
                </div>

            </div>
            <div class="col-sm-6 pt-4 pb-2 mb-3">
                <div class="row  text-center" style="margin:auto;width:60%">
                    <img src="https://i.im.ge/2022/07/20/F1AOWJ.png" alt="F1AOWJ.png" >
                </div>
                <div class="row pt-4" style="margin: auto;width: 90%;">

                    <h4>Register</h4>

                    <form action="/user/register" method="post">
                        <input class="form-control mb-3" type="text" name="register[name]" id=""
                            placeholder="Your Name">
                        <input class="form-control mb-3" type="text" name="register[id]" id=""
                            placeholder="Enter you ID">
                        <input class="form-control mb-3" type="email" name="register[email]" id=""
                            placeholder="Enter your Email">
                        <input class="form-control mb-3" type="text" name="register[u_name]" id=""
                            placeholder="Enter your User name">
                        <input class="form-control mb-3" type="password" name="register[pwd]" id=""
                            placeholder="Password">

                        <button class="btn btn-info">REGISTER</button>
                    </form>
                </div>
            </div>
        </div>
    </div>